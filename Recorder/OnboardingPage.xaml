<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recorder.OnboardingPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,20" Spacing="20" HorizontalOptions="Center">
            <Image Source="logo.png" WidthRequest="150" HorizontalOptions="Center" />
            
            <Label x:Name="TitleLabel"
                   FontSize="24"
                   TextColor="#2196F3"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="Body1Label"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
            
            <Button x:Name="ContinueButton"
                    Text="JATKA"
                    Clicked="ContinueButton_Clicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="200" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
